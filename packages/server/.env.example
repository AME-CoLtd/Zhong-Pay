# 服务端环境变量配置
NODE_ENV=development
PORT=3000

# 数据库
DATABASE_URL="mysql://root:password@localhost:3306/zhong_pay"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=alipay_public_key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_NOTIFY_URL=http://your-domain.com/api/notify/alipay

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_NOTIFY_URL=http://your-domain.com/api/notify/wechat
WECHAT_CERT_PATH=./certs/wechat/apiclient_cert.pem
WECHAT_KEY_PATH=./certs/wechat/apiclient_key.pem

# 系统配置
PLATFORM_NAME=众支付
PLATFORM_URL=http://localhost:3000
ADMIN_EMAIL=admin@zhongpay.com
